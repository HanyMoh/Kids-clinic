<div class="box" dir="rtl">
  <div class="box-header with-border">
    <h3 class="box-title">بيانات المستخدمين</h3>
  </div>
  <div class="box-body">
    <p>عدد العناصر المعروضة
      <span class="badge badge-blue"><%= @users.count %></span>
      عنصر</p>

    <% if can? :create, User %>
      <%= link_to 'إضافة مستخدم جديد', new_user_path, class: "btn btn-primary" %>
      <hr>
    <% end %>
    <div class="col-xs-12 table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th class="text-right">#</th>
            <th class="text-right">ايميل</th>
            <th class="text-right">مدير</th>
            <th class="text-right">مفعل</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <% @users.each do |user| %>
              <td><%= user.id %></td>
              <td><%= user.email %></td>
              <td><%= user.is_admin ? 'نعم' : 'لا' %></td>
              <td><%= user.is_active ? 'نعم' : 'لا'  %></td>
              <td>
                <%= link_to edit_user_path(user), class: "btn btn-primary btn-xs" do %>
                <i class="fa fa-pencil"></i> تعديل
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
<div class="box-footer"></div>
</div>
