<div class="col-md-12 panel-info">
  <div class="content-box-header  panel-heading">
    <div class="panel-title">عرض كل الزيارات</div>
    <div class="panel-options"></div>
  </div>
  <div class="content-box-large box-with-header">

    <%= link_to 'إضافة زيارة جديدة', new_visit_path, class: 'btn btn-primary' %>
    <br>
    <br>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th class="text-center">مسلسل</th>
          <th class="text-center">التاريخ</th>
          <th class="text-center">اسم الحالة</th>
          <th class="text-center">نوع ىالكشف</th>
          <th class="text-center">الدور</th>
          <th class="text-center">المستخدم</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @visits.each do |visit| %>
          <tr>
            <td><%= link_to visit.code, visit %></td>
            <td><%= visit.visit_date %></td>
            <td><%= visit.patient&.name %></td>
            <td><%= visit.visit_type&.name %></td>
            <td><%= visit.turn_num %></td>
            <td><%= visit.user&.email %></td>
            <td><%= link_to 'تعديل', edit_visit_path(visit) %>
              |
              <%= link_to 'حذف', visit, method: :delete, data: { confirm: 'هل أنت متأكد؟' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <%= link_to 'إضافة زيارة جديدة', new_visit_path, class: 'btn btn-primary' %>
  </div>
</div>
