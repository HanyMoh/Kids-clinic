<div class="page-header">
  <h1><small>عرض كل بيانات</small> المرضى</h1>
</div>

<%= link_to 'إضافة حالة جديدة', new_patient_path, class: 'btn btn-primary' %>
<br>
<br>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-center">الكود</th>
      <th class="text-center">الاسم</th>
      <th class="text-center">العمر</th>
      <th class="text-center">المنطقة</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.code %></td>
        <td><%= link_to patient.name, patient %></td>
        <td><%= time_ago_in_words patient.birthdate %></td>
        <td><%= patient.region&.name %></td>
        <td><%= link_to 'تعديل', edit_patient_path(patient) %> | <%= link_to 'حذف', patient, method: :delete, data: { confirm: 'هل انت متاكد؟' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'إضافة حالة جديدة', new_patient_path, class: 'btn btn-primary' %>
