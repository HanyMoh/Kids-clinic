<div class="box box-warning">
  <div class="box-header with-border">
    <h3 class="box-title"></h3>
    <div class="box-tools">
      <button type="button" class="btn btn-box-tool" data-widget="collapse">
        <i class="fa fa-minus"></i>
      </button>
    </div>
  </div>
  <div class="box-body" dir="rtl">
    <%= search_form_for @q do |f| %>
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :name, "اسم الحالة" %>
        <%= f.text_field :name_cont, class: 'form-control' %>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="form-group">
        <%= f.label :region_id, "المنطقة" %>
        <%= f.select :region_id_eq, options_from_collection_for_select(Region.all, "id", "name", @q.region_id_eq), {:include_blank => true}, {class: 'form-control'} %>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="form-group">
        <%= f.label :is_male, "النوع" %>
        <%= f.collection_select :is_male_eq, [[true, "ذكر"],[false, "أنثى"]], :first, :last, {include_blank: true},{class: 'form-control'} %>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="form-group">
        <%= f.label :birthdate_lteq, "الميلاد إلى" %>
        <%= f.text_field :birthdate_lteq,class: 'datepicker form-control', autocomplete: "off" %>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="form-group">
        <%= f.label :birthdate_gteq, "الميلاد من" %>
        <%= f.text_field :birthdate_gteq,class: 'datepicker form-control', autocomplete: "off" %>
      </div>
    </div>
  </div>
    <div class="box-footer">
      <%= f.submit 'بحث', class: 'btn btn-primary' %>
    </div>
    <% end %>
</div>
<div class="box" dir="rtl">
  <div class="box-header with-border">
    <h3 class="box-title">عرض كل بيانات المرضى</h3>
  </div>
  <div class="box-body">
    <%= link_to 'إضافة حالة جديدة', new_patient_path, class: 'btn btn-primary' %>
    <br>
    <br>
    <div class="col-xs-12 table-responsive">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th class="text-center">الكود</th>
            <th class="text-center">الاسم</th>
            <th class="text-center">العمر</th>
            <th class="text-center">المنطقة</th>
          </tr>
        </thead>
        <tbody class="table_body_data">
          <%= render partial: 'partial_body_data', collection: @patients, as: :patient %>
        </tbody>
      </table>
    </div>

    <div class="text-center" id="paginator">
      <%= link_to_next_page @patients, t('text.load_more'), remote: true, id: 'load_more', class: 'btn btn-default' %>
    </div>
  </div>

  <div class="box-footer">
    <%= link_to 'إضافة حالة جديدة', new_patient_path, class: 'btn btn-primary' %>
  </div>
</div>
