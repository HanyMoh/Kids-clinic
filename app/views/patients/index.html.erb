<div class="col-md-12 panel-info">
  <div class="content-box-header  panel-heading">
    <div class="panel-title">عرض كل بيانات المرضى</div>
    <div class="panel-options"></div>
  </div>
  <div class="content-box-large box-with-header">

    <%= link_to 'إضافة حالة جديدة', new_patient_path, class: 'btn btn-primary' %>
    <br>
    <br>
    <div class="col-xs-12 table-responsive">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th class="text-center">الكود</th>
            <th class="text-center">الاسم</th>
            <th class="text-center">العمر</th>
            <th class="text-center">المنطقة</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @patients.each do |patient| %>
            <tr>
              <td><%= patient.code %></td>
              <td><%= link_to patient.name, patient %> <span class="badge"><%= patient.visits.size %> زيارة</span></td>
              <td><%= time_ago_in_words patient.birthdate unless patient.birthdate.nil? %></td>
              <td><%= patient.region&.name %></td>
              <td><%= link_to 'تعديل', edit_patient_path(patient) %>
                |
                <%= link_to 'حذف', patient, method: :delete, data: { confirm: 'هل انت متاكد؟' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>
    <%= link_to 'إضافة حالة جديدة', new_patient_path, class: 'btn btn-primary' %>
  </div>
</div>
