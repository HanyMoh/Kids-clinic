<div class="box" dir="rtl">
  <div class="box-header with-border">
    <h3 class="box-title">عرض كل أنواع الكشف</h3>
  </div>
  <div class="box-body">
    <% if can? :create, VisitType %>
      <%= link_to 'إضافة نوع كشف جدبد', new_visit_type_path, class: 'btn btn-primary' %>
      <br><br>
    <% end %>
    <div class="col-xs-12 table-responsive">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th class="text-center">اسم نوع الكشف</th>
          </tr>
        </thead>

        <tbody>
          <% @visit_types.each do |visit_type| %>
            <tr>
              <td>
                <div class="btn-group">
                  <% if can? :update, VisitType %>
                    <%= link_to edit_visit_type_path(visit_type), title: 'تعديل', class: "btn btn-warning btn-xs" do %>
                      <i class="fa fa-pencil"></i>
                    <% end %>
                  <% end %>

                  <% if can? :destroy, VisitType %>
                    <%= link_to visit_type, method: :delete, data: { confirm: 'Are you sure?' }, title: 'حذف', class: "btn btn-danger btn-xs" do %>
                      <i class="fa fa-trash-o"></i>
                    <% end %>
                  <% end %>
                </div>
                <%= visit_type.name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="box-footer">
    <% if can? :create, VisitType %>
      <%= link_to 'إضافة نوع كشف جدبد', new_visit_type_path, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
