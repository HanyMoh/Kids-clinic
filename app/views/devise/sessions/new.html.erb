  <section id="registration" class="container">
    <div class="center" role="form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <fieldset class="registration-form">
          <div class="form-group">
            <%= f.text_field :email,autofocus: true,placeholder:"ألبريد الإلكترونى", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off",placeholder:"كلمة المرور", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me,"تذكرنى" %>
            </div>
          <% end -%>

          <div class="form-group">
            <%= f.submit "تسجيل الدخول", class: "btn btn-success btn-md btn-block" %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </section>
