<!-- Ionicons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
<div class="col-md-6">

</div>
<div class="col-md-6">
  <div class="col-xs-6">
          <!-- small box -->
          <div class="small-box bg-green">
            <div class="inner">
              <h3><%= @current_visits.size %><sup style="font-size: 20px"></sup></h3>

              <p>زيارة اليوم</p>
            </div>
            <div class="icon">
              <i class="ion ion-stats-bars"></i>
            </div>
            <%= link_to new_visit_path, class: "small-box-footer" do %>
              إضافة زيارة جديدة <i class="fa fa-arrow-circle-right"></i>
            <% end %>
          </div>
        </div>
<div class="col-xs-6">
          <!-- small box -->
          <div class="small-box bg-yellow">
            <div class="inner">
              <h3><%= @patients.size %></h3>
              <p>الحالات اليوم</p>
            </div>
            <div class="icon">
              <i class="ion ion-person-add"></i>
            </div>
            <%= link_to new_patient_path, class: "small-box-footer" do %>
              إضافة حالة جديدة <i class="fa fa-arrow-circle-right"></i>
            <% end %>
          </div>
        </div>

</div>
<div class="clearfix">

</div>
<div class="box" dir="rtl">
  <div class="box-header with-border">
    <h3 class="box-title">عرض حجوزات اليوم</h3>

    <div class="panel-options">عرض

      </div>
  </div>
  <div class="content-box-large box-with-header">
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th class="text-center">م</th>
            <th class="text-center">التاريخ</th>
            <th class="text-center">اسم الحالة</th>
            <th class="text-center">نوع ىالكشف</th>
            <th class="text-center">الدور</th>
          </tr>
        </thead>

        <tbody>
          <% @current_visits.each do |visit| %>
            <tr>
              <td><%= link_to "N#{visit.code}", visit %></td>
              <td><%= visit.visit_date %></td>
              <td><%= visit.patient&.name %></td>
              <td><%= visit.visit_type&.name %></td>
              <td><%= visit.turn_num %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
