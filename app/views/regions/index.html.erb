<div class="page-header">
  <h1><small>عرض كل</small> المناطق</h1>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-center">اسم المنطقة</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.name %></td>
        <td><%= link_to 'تعديل', edit_region_path(region) %> | <%= link_to 'حذف', region, method: :delete, data: { confirm: 'هل أنت متأكد؟' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'إضافة منطقة جدبدة', new_region_path, class: 'btn btn-primary' %>
