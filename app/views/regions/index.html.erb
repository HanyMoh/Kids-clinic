<div class="box" dir="rtl">
  <div class="box-header with-border">
    <h3 class="box-title">عرض المناطق</h3>
  </div>
  <div class="box-body">
    <% if can? :create, Region %>
      <%= link_to 'إضافة منطقة جدبدة', new_region_path, class: 'btn btn-primary' %>
      <br><br>
    <% end %>
    <div class="col-xs-12 table-responsive">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th class="text-center">اسم المنطقة</th>
          </tr>
        </thead>

        <tbody>
          <% @regions.each do |region| %>
            <tr>
              <td>
                <div class="btn-group">
                  <% if can? :update, Region %>
                    <%= link_to edit_region_path(region), title: 'تعديل', class: "btn btn-warning btn-xs" do %>
                      <i class="fa fa-pencil"></i>
                    <% end %>
                  <% end %>

                  <% if can? :destroy, Region %>
                    <%= link_to region, method: :delete, data: { confirm: 'Are you sure?' }, title: 'حذف', class: "btn btn-danger btn-xs" do %>
                      <i class="fa fa-trash-o"></i>
                    <% end %>
                  <% end %>
                </div>
                <%= region.name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="box-footer">
    <% if can? :create, Region %>
      <%= link_to 'إضافة منطقة جدبدة', new_region_path, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
